

<div class="index-container">
  <div class="header-index">

    <div class="header-index-hostbtn">
      <h2>Why Not Host Your Own Event?</h2>
      <%= form_tag("/events/new", method: :get) %>
        <button class="ui green button">Host an Event</button>
    </div>

    <div class="header-index-heading">
      <h2>Fitness Events in your area</h2>
    </div>
  </div>

  <div class="main-index-container">
    <% @events.each do |event| %>
      <% user = User.where(id: event.user_id) %>
      <div class="ui card card-container">
        <div class="content">
          <a class="header" href="/events/<%= event.id %>"><%= event['title'] %></a>
          <p><%= event['location']%></p>
          <div class="meta">
            <span class="right floated time">Posted on <%= event['date'] %></span>
          </div>
          <div class="description">
            <p><%= event['description'] %></p>
          </div>
        </div>
        <div class="extra content">
          <div class="right floated author">
            <img class="ui avatar image" src="http://avchiropractichealthcenter.com/wp-content/uploads/2015/05/AVC.Running.jpg"> <%= user[0].username %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
