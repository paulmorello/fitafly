

<div class="index-container">

  <div class="header-index">

    <div class="header-index-hostbtn">
      <h2>Why Not Host Your Own Event?</h2>
      <%= form_tag("/events/new", method: :get) do %>
        <button class="ui green button">Host an Event</button>
      <% end %>
    </div>

    <div class="header-index-search">
      <div class="ui form">
        <%= form_tag events_path, method: 'get' do %>
          <div class="field">
            <%= text_field_tag :search, params[:search], class: "ui input", placeholder: "Search by sport" %>
            <%= submit_tag "Search", class: "ui blue button submit-btn", :name => nil %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="header-index-heading">
      <h2>Fitness Events in your area</h2>
    </div>
  </div>

  <div class="main-index-container">
    <%= render 'partials/eventcards' %>
  </div>

</div>
