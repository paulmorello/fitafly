<!DOCTYPE html>
<html>
  <head>
    <title>Fitafly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
      <p>Logged in as: <%= current_user.email %></p>
    <% else %>
      <a href="/login">Login</a>
    <% end %>
    
    <%= yield %>
  </body>
</html>
